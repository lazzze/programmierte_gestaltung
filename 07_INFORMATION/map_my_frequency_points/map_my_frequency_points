var mic, fft, spectrum;

function setup() {
   createCanvas(800,800);
   noFill();

   mic = new p5.AudioIn();
   mic.start();
   fft = new p5.FFT();
   fft.setInput(mic);
}

function draw() {
   background(0);
stroke(255);
  var spectrum = fft.analyze();

  strokeWeight(20);

   beginShape(POINTS);
   for (i = 0; i<spectrum.length; i+=30) {
    vertex(i, map(spectrum[i], 0, 255, 600, 0) );
   }
   endShape();
}
